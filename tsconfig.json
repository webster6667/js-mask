{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",

    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,

    "sourceMap": true,

    "jsx": "react",
    "allowJs": true,

    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@common-types": ["src/types.ts"],
      "@helpers/*": ["src/helpers/*"]
    }
  },
  "ts-node" : {
    "compilerOptions" : {
      "target": "es6",
      "module" : "commonjs"
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules/",
    "lib",
    "es"
  ]
}
